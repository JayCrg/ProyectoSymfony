{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    {{ include('partials/navigation.html.twig') }}

{% if notas is not empty %}
    <h2>Notas del alumno {{ notas[0].alumnoId }}</h2>
{% else %}
    <h2>No se encontraron notas para este alumno</h2>
{% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Asignatura</th>
                <th>Nota</th>

            </tr>
        </thead>
        <tbody>
        {% for nota in notas %}
            <tr>
                <td>{{ nota.asigId }}</td>
                <td>{{ nota.nota }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
<a class="btn btn-secondary"  href="{{ path('boletin') }}">Back</a>
<a href="{{ path('app_index') }}" class="btn btn-warning">Back to menu</a>
{% endblock %}