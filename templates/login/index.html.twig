{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
 {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
    <div class="mt-3">
        <label for="username" class="form-label">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" aria-describedby="emailHelp">
    </div>
    <div class="mt-3">
        <label for="password" class="form-label">Password:</label>
        <input type="password" id="password" name="_password" class="form-label">
    </div>
        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn btn-success">Login</button>
    </form>
    <br>
    <h5>Not registered yet? <a href="{{ path('app_register') }}">Register</a></h5>
{% endblock %}
